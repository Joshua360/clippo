{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // Output directory for compiled JavaScript files
    "rootDir": "./" // Root directory of your TypeScript files
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}
